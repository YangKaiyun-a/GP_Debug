/*************************************QScrollArea样式***************************************/
QScrollArea
{
    background: #303233; /* 设定滚动区域的背景颜色 */
}

/* 移除滚动条整体样式 */
QScrollBar:vertical
{
    border: none; /* 移除边框 */
    background: transparent; /* 设定滚动条背景颜色 */
    width: 10px; /* 设定滚动条宽度 */
    margin: 0px 0px 0px 0px; /* 移除滚动条和滚动区域之间的间隙 */
}

/* 移除滚动条滑块样式 */
QScrollBar::handle:vertical
{
    background: #424242; /* 设定滑块的背景颜色 */
    min-height: 50px; /* 设定滑块的最小高度 */
    border-radius: 5px; /* 设定滑块的圆角 */
    border: 1px solid #bebebe;
}

/* 移除滚动条上下的按钮 */
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical
{
    border: none;
    background: none;
    height: 0px;
}

/* 移除滚动条上下按钮的箭头 */
QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
    width: 0px;
    height: 0px;
    background: none;
}

/* 在滚动条滑块上面和下面的空间中不显示任何东西 */
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
    background: none;
}

