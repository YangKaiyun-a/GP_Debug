{
    border-top-left-radius : 4px;
    border-top-right-radius : 4px;
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1,
                                                                        stop:0 rgb(107,107,107),
                                                                        stop:1 rgb(94,94,94));
}

