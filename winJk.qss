/*************************************所有字体样式***********************************/
*
{
    font: normal normal 14px "Microsoft YaHei";
    color:#FFFFFF;
}

/*************************************所有QComboBox字体样式***********************************/
QComboBox, QComboBox QAbstractItemView
{
    font: normal normal 14px "Microsoft YaHei";
    color: #000000;
    selection-color: #000000;
}


/*************************************基本按钮样式***********************************/
QPushButton
{
    border-radius: 4px;
    color: #646464;
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 #DFDFDF, stop:1 #B2B2B2);
}

QPushButton:hover
{
    border-radius: 4px;
    border: 0;
    color:#ffffff;
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1,
                                                                        stop:0 #00AEAE,
                                                                        stop:1 #006C6C);
}

QPushButton:pressed
{
    border-radius: 4px;
    border: 0;
    color:#ffffff;
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1,
                                                                        stop:0 #008787,
                                                                        stop:1 #007373);
}

